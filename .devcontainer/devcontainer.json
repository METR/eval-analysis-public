{
  "name": "public-plots dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/metr/app,type=bind,consistency=cached",
  "workspaceFolder": "/home/metr/app",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "mounts": [
    {
      "source": "public-plots-home",
      "target": "/home/metr",
      "type": "volume"
    },
    {
      "source": "${localEnv:HOME}${localEnv:USERPROFILE}/.config/viv-cli",
      "target": "/home/metr/.config/viv-cli",
      "type": "bind"
    }
  ],
  "runArgs": [
    "--name=public-plots-dev",
    "--hostname=public-plots",
    "--dns-search=koi-moth.ts.net"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "editor.formatOnSave": true,
        "python.analysis.typeCheckingMode": "basic",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff"
        }
      },
      "extensions": [
        "charliermarsh.ruff",
        "editorconfig.editorconfig",
        "ms-python.debugpy",
        "ms-python.python-debug",
        "ms-python.python",
        "ms-toolsai.datawrangler",
        "ms-toolsai.jupyter",
        "redhat.vscode-yaml"
      ]
    }
  }
}
